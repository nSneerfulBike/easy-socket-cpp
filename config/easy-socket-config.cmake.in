# Explain
message("using ${PROJECT_NAME}-config.cmake find")

# Find EASY_SOCKET_INCLUDE
find_path(EASY_SOCKET_INCLUDE ${PROJECT_NAME}/ HINTS ${CMAKE_INSTALL_PREFIX}/include/)

# Find EASY_SOCKET_LIBRARY
if (WIN32)
	find_path(EASY_SOCKET_LIBRARY ${PROJECT_NAME}.lib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (MINGW)
	find_path(EASY_SOCKET_LIBRARY ${PROJECT_NAME}.dll.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (APPLE)
	find_path(EASY_SOCKET_LIBRARY lib${PROJECT_NAME}.dylib HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(EASY_SOCKET_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
elseif (UNIX)
	find_path(EASY_SOCKET_LIBRARY lib${PROJECT_NAME}.so HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
	find_path(EASY_SOCKET_LIBRARY lib${PROJECT_NAME}.a HINTS ${CMAKE_INSTALL_PREFIX}/lib/)
endif ()

# Setting
if(EASY_SOCKET_INCLUDE AND EASY_SOCKET_LIBRARY)
	set(EASY_SOCKET_FOUND TRUE)
	add_definitions(-D${EASY_SOCKET_BUILD_REPLACE})
endif()
